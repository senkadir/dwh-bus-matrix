@model List<ViewDimensionModel>

@section css{
    <link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

@section js{
    <script src="/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="/plugins/page/dimension/dimension.index.js"></script>
}

<div class="card card-deck card-bordered">
    <div class="card-header">
        <div class="card-toolbar">
            <a href="/dimensions/new" class="btn btn-primary">
                <i class="fa la-plus"></i>New
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="table1" class="table table-hover table-striped table-bordered table-row-bordered gy-5">
            <thead>
                <tr class="fw-bold fs-6 text-muted">
                    <th>Id</th>
                    <th>Name</th>
                    <th>
                        <div class="d-flex justify-content-end">
                            Actions
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="d-flex justify-content-end">
                                <div class="ms-2">
                                    <button type="button" class="btn btn-sm btn-icon btn-icon-dark" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                        <i class="fa la-trash"></i>
                                    </button>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

