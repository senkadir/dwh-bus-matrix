@model IEnumerable<ViewFactModel>

@section css{
    <link href="/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />
}

@section js{
    <script src="/plugins/custom/datatables/datatables.bundle.js"></script>
    <script src="/plugins/page/fact/fact.index.js"></script>
}

<div class="card card-deck card-bordered">
    <div class="card-header">
        <div class="card-toolbar">
            <a href="/facts/new" class="btn btn-primary">
                <i class="fa la-plus"></i>New
            </a>
        </div>
    </div>
    <div class="card-body">
        <table id="table1" class="table table-hover table-striped table-bordered table-row-bordered gy-5">
            <thead>
                <tr class="fw-bold fs-6 text-muted">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Order</th>
                    <th>Is Active</th>
                    <th>Dimensions</th>
                    <th>
                        <div class="d-flex justify-content-end">
                            Actions
                        </div>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <th>@item.Order</th>
                        <th>
                            <input class="form-check-input" type="checkbox" id="isActive" name="isActive" disabled="disabled" asp-for="@item.IsActive" />
                        </th>
                        <th>
                            @if (item.Dimensions.Count() > 0)
                            {
                                <select class="form-select" data-control="select2" multiple="multiple" data-allow-clear="false">
                                    <option disabled="disabled"></option>
                                    @foreach (var dimension in item.Dimensions)
                                    {
                                        <option value="@dimension.Id" disabled="disabled" selected>@dimension.Name</option>
                                    }
                                </select>
                            }
                            else
                            {
                                <span class="badge badge-dark">No dimensions yet</span>
                            }
                        </th>
                        <td>
                            <div class="d-flex justify-content-end">
                                <div class="ms-2">
                                    <a href="facts/@item.Id/edit/" class="btn btn-sm btn-icon btn-icon-dark" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit">
                                        <i class="fa la-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

